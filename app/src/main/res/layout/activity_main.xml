<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewNameGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Калинин Андрей ПИ-231"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/textViewPoem"
        android:layout_below="@id/textViewNameGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Если б мишки были пчелами,\nТо они бы нипочём\nНикогда и не подумали\nТак высоко строить дом!"
        android:layout_margin="16dp" />

    <TextView
        android:id="@+id/textViewTranslatedPoem"
        android:layout_below="@id/textViewPoem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/translated_poem"
        android:layout_margin="16dp" />

</RelativeLayout>